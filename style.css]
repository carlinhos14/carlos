body {
    font-family: Arial, sans-serif; /* Define a fonte do texto */
    margin: 0; /* Remove margem padrão do corpo */
    padding: 0; /* Remove preenchimento padrão do corpo */
    background-color: #f4f4f4; /* Cor de fundo suave */
    color: #333; /* Cor do texto padrão */
    line-height: 1.6; /* Espaçamento entre linhas */
}

header {
    background-color: #4CAF50; /* Verde Agrinho! */
    color: white;
    padding: 1em 0;
    text-align: center;
}

header h1 {
    margin-bottom: 0.5em;
}

nav {
    background-color: #333;
    color: white;
    padding: 0.5em 0;
    text-align: center;
}

nav ul {
    list-style: none; /* Remove marcadores de lista */
    padding: 0;
    margin: 0;
}

nav ul li {
    display: inline; /* Coloca os itens da lista lado a lado */
    margin: 0 15px;
}

nav ul li a {
    color: white;
    text-decoration: none; /* Remove sublinhado dos links */
    font-weight: bold;
}

nav ul li a:hover {
    text-decoration: underline; /* Adiciona sublinhado ao passar o mouse */
}

main {
    padding: 20px;
    max-width: 900px; /* Largura máxima do conteúdo */
    margin: 20px auto; /* Centraliza o conteúdo */
    background-color: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
    border-radius: 8px; /* Cantos arredondados */
}

section {
    margin-bottom: 30px;
    padding: 20px;
    border-bottom: 1px solid #eee; /* Linha divisória entre seções */
}

section:last-of-type {
    border-bottom: none; /* Remove a linha da última seção */
}

h2 {
    color: #4CAF50; /* Cor verde para títulos das seções */
    margin-top: 0;
}

img {
    max-width: 100%; /* Garante que a imagem não ultrapasse a largura da seção */
    height: auto; /* Mantém a proporção da imagem */
    display: block; /* Remove espaço extra abaixo da imagem */
    margin: 15px 0;
    border-radius: 5px;
}

form {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 8px;
    border: 1px solid #ddd;
}

form label {
    display: block; /* Cada label em uma nova linha */
    margin-bottom: 8px;
    font-weight: bold;
}

form input[type="text"],
form input[type="email"],
form textarea {
    width: calc(100% - 22px); /* 100% menos o padding e a borda */
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

form button {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1em;
}

form button:hover {
    background-color: #45a049;
}

footer {
    text-align: center;
    padding: 20px;
    background-color: #333;
    color: white;
    margin-top: 30px;
}